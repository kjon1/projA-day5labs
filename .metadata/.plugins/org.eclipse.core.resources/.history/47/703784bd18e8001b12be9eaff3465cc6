package main;



import java.util.Scanner;




public class Converter {
	
	
	
	
	public static void main (String[]args) {
		
		int menuSelection;
		int poundsToKilograms;
		


		


	Scanner sc = new Scanner(System.in);

	
	//while (menuSelection != menuSelection) { 

	System.out.println("Welcome to Unit Converter Online.");
	System.out.println("Please select an option.");
	System.out.println("1. Pounds to Kilograms");
	System.out.println("2. Kilograms to pounds");
	System.out.println("3. Quit application and exit.");
	
	menuSelection = sc.nextInt();
	
	switch (menuSelection) {
	case 1: 
		System.out.println("Enter weight in pounds to convert.");
		poundsToKilograms = sc.nextInt();
		double convertedKilograms = poundsToKilograms / 1.5;
		System.out.println("poundsToKilograms " + "pounds equals " + convertedKilograms);
		
		break;
		
	case 2:
		System.out.println("Enter weight in kilograms to convert.");
		break;
		
	case 3:
		System.out.println("Thank you for using Unit Converter. Goodbye!");
		break;
	}
	

		
	}
	
}
		
		
		
		
	

	
	



